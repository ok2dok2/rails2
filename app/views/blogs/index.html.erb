<h1>Blogs#index</h1>
<p><%= notice %></p>
<h1>ブログ一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>詳細</th>
    <th>編集</th>
    <th>削除</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>

    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, data: { confirm: '削除してもいいですか？'} %></td>
  </tr>
<% end %>
</table>

<p><%= link_to '投稿する', new_blog_path %></p>
<p>Find me in app/views/blogs/index.html.erb</p>
